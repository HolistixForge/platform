{
  "openapi": "3.0.1",
  "info": {
    "title": "Gateway API (Collaboration & Events)",
    "version": "2.0",
    "description": "Organization-level gateway for collaborative state and OAuth"
  },
  "paths": {
    "/collab/ping": {
      "get": {
        "summary": "Health check",
        "tags": ["Collab"],
        "responses": {
          "200": { "$ref": "#/components/responses/empty" }
        }
      }
    },
    "/collab/event": {
      "post": {
        "summary": "Process collaborative event",
        "tags": ["Collab"],
        "parameters": [
          { "$ref": "#/components/parameters/headers_authorization" }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "event": {
                    "type": "object",
                    "properties": {
                      "type": { "type": "string" }
                    },
                    "additionalProperties": true,
                    "required": ["type"]
                  }
                },
                "required": ["event"],
                "additionalProperties": false
              }
            }
          }
        },
        "responses": {
          "200": { "$ref": "#/components/responses/empty" },
          "4XX": { "$ref": "#/components/responses/errors" }
        }
      }
    },
    "/collab/start": {
      "post": {
        "summary": "Initialize gateway with organization handshake",
        "tags": ["Collab"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "tmp_handshake_token": { "type": "string", "format": "uuid" }
                },
                "required": ["tmp_handshake_token"]
              }
            }
          }
        },
        "responses": {
          "200": { "$ref": "#/components/responses/empty" },
          "4XX": { "$ref": "#/components/responses/errors" }
        }
      }
    },
    "/collab/room-id": {
      "get": {
        "summary": "Get room ID for a project",
        "description": "Returns the room ID for a specific project. Requires project access permission.",
        "tags": ["Collab"],
        "parameters": [
          { "$ref": "#/components/parameters/headers_authorization" },
          {
            "in": "query",
            "name": "project_id",
            "description": "Project ID (optional if provided in JWT)",
            "required": false,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Room ID",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": { "type": "string", "format": "uuid" }
                  },
                  "required": ["data"]
                }
              }
            }
          },
          "4XX": { "$ref": "#/components/responses/errors" }
        }
      }
    },
    "/collab/vpn-config": {
      "get": {
        "summary": "Get VPN configuration",
        "tags": ["VPN"],
        "parameters": [
          { "$ref": "#/components/parameters/headers_authorization" }
        ],
        "responses": {
          "200": {
            "description": "VPN configuration",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "ca": { "type": "string" },
                        "cert": { "type": "string" },
                        "key": { "type": "string" },
                        "ta": { "type": "string" },
                        "port": { "type": "number" },
                        "config": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          },
          "4XX": { "$ref": "#/components/responses/errors" }
        }
      }
    }
  },
  "components": {
    "responses": {
      "empty": {
        "description": "Success",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "additionalProperties": false
            }
          }
        }
      },
      "errors": {
        "description": "Error response",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/errors" }
          }
        }
      }
    },
    "schemas": {
      "errors": {
        "type": "object",
        "properties": {
          "uuid": { "type": "string" },
          "errors": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "message": { "type": "string" },
                "public": { "type": "boolean" }
              }
            }
          }
        }
      }
    },
    "parameters": {
      "headers_authorization": {
        "in": "header",
        "name": "authorization",
        "description": "JWT access token",
        "required": true,
        "schema": {
          "type": "string",
          "pattern": "^(?:token\\s)?[-A-Za-z0-9_+./]*={0,3}$"
        }
      }
    }
  }
}
